{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "type": "object",
            "properties": {
                "revision": {
                    "type": "integer"
                },
                "patch": {
                    "type": "integer"
                },
                "draft": {
                    "type": "integer"
                },
                "release": {
                    "type": "string"
                },
                "build": {
                    "type": "string"
                }
            },
            "required": [
                "revision",
                "patch",
                "draft"
            ]
        },
        "Consortium": {
            "type": "object",
            "properties": {
                "editor": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "vscode"
                        ]
                    },
                    "additionalItems": false
                },
                "root": {
                    "type": "string"
                }
            },
            "required": [
                "root"
            ]
        },
        "TCsL2H": {
            "type": "object",
            "properties": {
                "year": {
                    "type": "integer"
                },
                "licensor": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "name"
                    ]
                },
                "root": {
                    "type": "string"
                }
            },
            "required": [
                "year",
                "licensor"
            ]
        }
    },
    "required": [
        "$schema",
        "version",
        "Consortium",
        "TCsL2H"
    ],
    "additionalProperties": false
}
